<html>
    <head>
        <title>
            <%= title%>
        </title>
        <script src="https://kit.fontawesome.com/6ef497a6f1.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-head">
            <i class="fas fa-address-book"></i>
            My Contacts List</h1>
        <div id="contact-list-container">
            <ul>
                <%for(let i of contact_list){%>
                    <li class="contacts">
                    <div class="details">
                <p id="name"><i class="fas fa-id-card"></i> <%=i.name%>  </p>
                <p id="mobile"><%=i.mobile%></p>    
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/<%=i.mobile%>">
                            <i class="fas fa-window-close"></i>
                        </a>
                    </div>
                    </li>
                <%}%>
            </ul>
        </div>
        <form action="create-contact" method="post">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number"name="mobile" placeholder="Enter mobile number" required>

            <button type="submit">Add Contact</button>
        </form>
    </body>
    <footer>
        <a href="https://github.com/Masterroy1210">        
    <p>Created by Masterroy</p>
        </a>

    </footer>
</html>